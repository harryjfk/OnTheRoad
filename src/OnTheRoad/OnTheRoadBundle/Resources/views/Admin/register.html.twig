{% extends 'OnTheRoadOnTheRoadBundle::layout.html.twig' %}

 {% block container %}
     <div class="row ">
         <div id="information-front" class="col-xs-12  btn-center">

             <form action="{{ path('register',{'locale':customlocale}) }}" method="post">
                 <div class="row">
                     <div class="col-xs-3"></div>
                     <div class="col-xs-6">
                         <h2 class="form-signin-heading">{% trans %}Register{% endtrans %}</h2>

                             {{ form_widget(form) }}

                     <input class="btn btn-lg btn-primary btn-block" type="submit" value="{% trans %}Register{% endtrans %}"/>
                     </div>
                     <div class="col-xs-3"></div>
                 </div>
             </form>
         </div>

     </div>

 {% endblock %}
